apiVersion: karpenter.k8s.aws/v1
kind: EC2NodeClass
metadata:
  name: gpu
spec:
  role: "${CLUSTER_NAME}"
  
  # Use Bottlerocket AMI for GPU nodes
  amiSelectorTerms:
    - alias: "bottlerocket@latest"
  
  subnetSelectorTerms:
    - tags:
        karpenter.sh/discovery: "${CLUSTER_NAME}"
  
  securityGroupSelectorTerms:
    - tags:
        karpenter.sh/discovery: "${CLUSTER_NAME}"
  
  # Bottlerocket requires TWO block devices:
  # - /dev/xvda: Control volume (OS)
  # - /dev/xvdb: Data volume with PRE-CACHED container images from snapshot
  # Using a snapshot eliminates container image pull time entirely
  blockDeviceMappings:
    - deviceName: /dev/xvda
      ebs:
        volumeSize: 4Gi
        volumeType: gp3
        encrypted: true
        deleteOnTermination: true
    - deviceName: /dev/xvdb
      ebs:
        volumeSize: 50Gi
        volumeType: gp3
        iops: 3000
        throughput: 125
        encrypted: true
        deleteOnTermination: true
        # ‚≠ê EBS snapshot with pre-cached vLLM container image
        # This eliminates container pull time - image is already on disk
        snapshotID: "${SNAPSHOT_ID}"
  
  # Bottlerocket userData configuration
  userData: |
    [settings.kubernetes]
    allowed-unsafe-sysctls = ["net.core.somaxconn"]
  
  tags:
    Name: karpenter-gpu-snapshot
    intent: inference
